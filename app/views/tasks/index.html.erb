<h1>My tasks</h1>

<ul>
<% @tasks.each do |task|  %>
<li><%= task.completed ? "[x]" : "[ ]" %><%= link_to task.title, task_path(task) %>-<%= link_to "destroy", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></li>
<%end %>
</ul>


